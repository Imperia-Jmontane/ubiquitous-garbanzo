{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={AppDataPath}/MyApp.db"
  },
  "Database": {
    "Provider": "Sqlite"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:O} [{Level:u3}] (state={state}) (userId={userId}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Secrets": {
    "GitHubClientId": "${GITHUB__CLIENT_ID}",
    "GitHubClientSecret": "${GITHUB__CLIENT_SECRET}"
  },
  "GitHubOAuth": {
    "ClientId": "${GITHUB__CLIENT_ID}",
    "ClientSecret": "${GITHUB__CLIENT_SECRET}",
    "AuthorizationEndpoint": "https://github.com/login/oauth/authorize",
    "TokenEndpoint": "https://github.com/login/oauth/access_token",
    "UserInformationEndpoint": "https://api.github.com/user",
    "CallbackPath": "/signin-github",
    "Scopes": [
      "repo",
      "workflow",
      "read:user"
    ]
  },
  "Bootstrap": {
    "SetupPassword": "change-me",
    "AuditUserId": "d44a01be-e1bb-4ab0-9e02-4ed072d7228d"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
